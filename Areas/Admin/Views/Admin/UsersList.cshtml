@using BashMaistoriBG.Data.Identity
@model List<ApplicationUser>

@{
    ViewData["Title"] = "Потребители";
}


<div class="userList">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">E-mail</th>
                <th scope="col">Потребителско име</th>
                <th scope="col">Първо име</th>
                <th scope="col">Фамилно име</th>
                <th scope="col">Специалност</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Email</td>
                    <td>@item.UserName</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@(item.Specialty?.Name != null ? item.Specialty.Name : "Няма специалност")</td>
                    <td>
                        <a class="btn-danger btn" asp-area="Admin" asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@item.Id">Премахни потребител</a>
                        <a class="btn-success btn" asp-area="Admin" asp-controller="Admin" asp-action="EditUser" asp-route-id="@item.Id">Редактирай потребител</a>
                        @if (item?.Role == "Worker")
                        {
                        }
                        else
                        {
                            <a class="btn-warning btn" asp-area="Admin" asp-controller="Admin" asp-action="SetUserAsWorker" asp-route-id="@item.Id">Направи потребител работник</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>